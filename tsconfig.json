{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    "module": "esnext",
    "target": "ES5",
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "lib": ["es2020", "DOM"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
