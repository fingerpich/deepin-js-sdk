{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    
    "module": "esnext",
    "target": "ES5",
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "lib": ["es2020", "DOM"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist/pkg",
    "declarationMap": false,
    "declaration": true,
    "declarationDir": "./dist/types",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
